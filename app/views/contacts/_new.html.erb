<div class="container">
  <h2>Mail ons</h2>
  <%= form_for @contact do |f| %>
    <div class="col-md-6">
      <%= f.label :naam %></br>
      <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>

      <%= f.label :email %></br>
      <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

      <%= f.label :Bericht %></br>
      <%= f.text_area :message, rows: 8, cols: 60, required: true, class: "contact-form-text-area",
            placeholder: "Uw bericht hier"%></br>

      <div class= "d-none">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>

      <%= f.submit 'VERSTUUR BERICHT', id: 'button-contact-submit' %>
    </div>
  <% end %>
</div>
